<%- include("header"); -%>
    <div class="box" id="heading">
      <!-- Render day of the week in format set in app.js kindOfDay -->
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <!-- Add list item for each item added to Todo list by user via ejs listItems -->
      <% for (let i=0; i < listItems.length; i++) { %>
        <div class="item">
          <input type="checkbox">
          <p><%= listItems[i] %></p>
        </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
      </form>
    </div>
  </body>
<%- include("footer"); -%>
